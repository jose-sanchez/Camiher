@using WEBCAMIHER.Views.Shared
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <!-- Bootstrap core CSS -->
        <link href="\Content\bootstrap.min.css" rel="stylesheet" />

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <div id="logindisplay">
                        @Html.ActionLink("English", "ChangeCulture", "Home",
                        new { lang = "en", returnUrl = this.Request.RawUrl }, null)
                        @Html.ActionLink("Español", "ChangeCulture", "Home",
                        new { lang = "es", returnUrl = this.Request.RawUrl }, null)
                        @Html.ActionLink("Deutch", "ChangeCulture", "Home",
                        new { lang = "de", returnUrl = this.Request.RawUrl }, null)
                    </div>
                    <img src="~/Images/Header.png" />
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink(@SharedStrings.OurServices, "OurServices", "Home")</li>
                            <li>@Html.ActionLink(@SharedStrings.Housing, "Housing", "Home")</li>
                            <li>@Html.ActionLink(@SharedStrings.Machinery_for_sale, "ListProducts", "Products")</li>
                            <li>@Html.ActionLink(@SharedStrings.Contact, "Contact", "Home")</li>                      
                        </ul>
                    </nav>
                </div>
                <div class="float-right">
                    @*<section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>*@
   
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - CAMIHER</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)

        
    </body>
</html>
